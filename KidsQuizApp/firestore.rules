rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: is the requester authenticated?
    function isAuth() {
      return request.auth != null;
    }

    // Helper: is the requester the owner of this document?
    function isOwner(uid) {
      return isAuth() && request.auth.uid == uid;
    }

    // ── Users ────────────────────────────────────────────────────────────
    match /users/{uid} {
      allow read: if isAuth();
      allow create: if isOwner(uid);
      allow update: if isOwner(uid);
      allow delete: if false; // Users cannot delete their own profile

      // Game progress sub-collection
      match /progress/{docId} {
        allow read, write: if isOwner(uid);
      }

      // Game results sub-collection (append-only)
      match /gameResults/{resultId} {
        allow read: if isOwner(uid);
        allow create: if isOwner(uid);
        allow update, delete: if false;
      }
    }
  }
}
